<% content_for :page_title do %><%= @pin.title %>'s Galleries<% end %>

<div class="page-header">
  <h1 style="display:inline">Galleries <small><%= @pin.title %></small></h1>&nbsp;
  <%= link_to "Return to pins", pins_path, :class => "btn btn-map btn-small" %>
</div>

<%= render "new" %>

<div class="alert">
  <strong>Tip:</strong> In order to add images to your galleries, simply open your Dropbox at specified path and add some photos.
</div>

<div id="galleries">
  <table class="table table-hover table-striped">
    <%= render(:partial => "manage_gallery", :collection => @galleries, :as => :gallery) || content_tag("p", "You have not yet added galleries.", :class => "lead empty-set") %>
  </table>
</div>