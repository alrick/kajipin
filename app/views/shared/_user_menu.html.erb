<% if user_signed_in? %>
  <ul class="nav pull-right">
    <div class="btn-group">
      <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
        <i class="icon-user"></i>
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li id="global-menufirst">
          <%= link_to(user_path(current_user)) do %>
            <%= image_tag gravatar_url(current_user, 28), :class => "img-polaroid" %>
              <strong><%= current_user.first_name %> <%= current_user.last_name %></strong>
              <p>View my profile</p>
          <% end %>
        </li>
        <li class="divider"></li>
        <li><%= link_to content_tag("i", "", class: "icon-map-marker")+" Your Pins", pins_path %></li>
        <li><%= link_to content_tag("i", "", class: "icon-heart")+" Your Friends", friends_path %></li>
        <li><%= link_to content_tag("i", "", class: "icon-retweet")+" Your Services", accesstokens_path %></li>
        <li><%= link_to content_tag("i", "", class: "icon-cog")+" Your Account", edit_user_registration_path %></li>
        <li><%= link_to content_tag("i", "", class: "icon-off")+" Log out", destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
  </ul>
<% end %>