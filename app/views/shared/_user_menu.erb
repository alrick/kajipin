<% if user_signed_in? %>
  <ul class="nav pull-right">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="icon-user icon-white bigger"></i>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
          <li>
            <%= link_to(profile_path) do %>
              <%= image_tag gravatar_url(current_user, 34), :class => 'user-menu-avatar' %>
                <strong class="user-menu-name"><%= current_user.first_name %> <%= current_user.last_name %></strong>
                <p class="user-menu-viewprofile">View my profile</p>
            <% end %>
          </li>
          <li class="divider"></li>
          <li><%= link_to '<i class="icon-pencil"></i> Modify profile'.html_safe, edit_user_registration_path %></li>
          <li><%= link_to '<i class="icon-map-marker"></i> Manage locations'.html_safe, manage_user_locations_path(current_user) %></li>
          <li><%= link_to '<i class="icon-heart"></i> Manage friends'.html_safe, friendships_path %></li>
          <li><%= link_to '<i class="icon-off"></i> Log out'.html_safe, destroy_user_session_path, method: :delete %></li>
      </ul>
    </li>
  </ul>
<% end %>