<% content_for :page_title do %>Welcome<% end %>

<div class="home-info">
  <h2><%= Appetizer.appname %>, quesako?</h2>
  <p class="lead">
    <%= Appetizer.appname %> is a social network for people who love to travel and share with friends!
  </p>
  <p class="lead">
    <%= link_to "Sign up", new_user_registration_path, :class => "btn btn-social btn-large" %>
  </p>
</div>

<div class="home-info">
  <h3>Sign in <small>Welcome home</small></h3>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-inline"}) do |f| %>
    <%= f.email_field :email, :class => "input-large", :placeholder => "Email" %>
    <%= f.password_field :password, :class => "input-large", :placeholder => "Password" %>
    <%= f.submit "Sign in", :class => "btn btn-social" %>
    <% if devise_mapping.rememberable? -%>
      <p>
        <label class="checkbox">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </label>
      </p>
    <% end -%>
  <% end %>
  <p><%= render "devise/shared/links" %></p>
</div>