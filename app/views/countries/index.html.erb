<% content_for :page_title do %> - Countries<% end %>

<div class="page-header">
  <h1>Countries <small>A list of all available countries.</small></h1>
</div>
<table class="table table-striped">
  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><b><%= country["name"] %></b></td>
        <td><b><%= country["continent"] %></b></td>
        <td><b><%= country["capital"] %></b></td>
      </tr>
    <% end %>
  </tbody>
</table>