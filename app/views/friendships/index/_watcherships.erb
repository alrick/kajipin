<div class="tab-pane active" id="tab-friends-1">
  <% if current_user.friendships.empty? %>
    <p>You have no watcher.</p>
  <% else %>
    <table class="table table-striped friendships-table">
      <tbody>
        <% current_user.friendships.each do |watchership| %>
          <tr>
            <td class="friendships-tableavatar"><%= image_tag gravatar_url(watchership.friend, 30), :class => 'img-polaroid' %></td>
            <td class="friendships-tablename"><%= watchership.friend.first_name %> <%= watchership.friend.last_name %></td>
            <td>
              <%= link_to '<i class="icon-remove-sign"></i> Remove'.html_safe, watchership, :method => :delete, :class => 'btn btn-mini btn-social' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>