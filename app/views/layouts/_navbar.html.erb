<% if user_signed_in? || !@herald.nil? %>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <%= toggler(layout) %>
      <div class="container">

        <!-- BRAND -->
        <%= link_to Appetizer.appname+" "+content_tag("span", "Beta", id: "betasig"), root_path, :class => "brand" %>

        <!-- SEPARATOR -->
        <ul class="nav">
          <li class="divider-vertical"></li>
        </ul>

        <!-- Check if an herald is used to view the page == accessed publicly -->
        <% if @herald.nil? %>

          <!-- SEARCH BAR -->
          <%= form_tag("/users", :method => "get", :class => "navbar-search") do %>
            <div class="input-append">
              <%= text_field_tag :q, nil, :class => "span2", :placeholder => "Search user" %>
              <button class="btn" type="submit"><i class="icon-search"></i></button>
              <%= link_to content_tag("i", "", :class => "icon-group"), users_path, :class => "btn" %>
            </div>
          <% end %>

          <!-- USER MENU -->
          <ul class="nav pull-right">
            <!-- UTILITIES -->
            <li class="utility">
              <%= link_to content_tag("i", "", :class => "icon-link"), heralds_path, :id => "herald-box", :class => "modal-open #{"active" if current_user.hasHerald?}", :remote => true %>
            </li>
            <li class="utility">
              <%= link_to content_tag("i", "", :class => "icon-inbox"), requests_path, :id => "requests-box", :class => "modal-open #{"active" if current_user.hasRequest?}", :remote => true %>
            </li>
            <li>
              <div class="btn-group">
                <a class="btn btn-map dropdown-toggle" data-toggle="dropdown" href="#">
                  <i class="icon-user"></i>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu pull-right">
                  <li id="global-menufirst">
                    <%= link_to(user_path(current_user)) do %>
                      <table>
                        <tr>
                          <td rowspan="2"><%= image_tag avatar_url(current_user, 28), :class => "img-polaroid" %></td>
                          <td><strong><%= current_user.first_name %> <%= current_user.last_name %></strong></td>
                        </tr>
                        <tr>
                          <td><p>View profile</p></td>
                        </tr>
                      </table>
                    <% end %>
                  </li>
                  <li class="divider"></li>
                  <li class="usermenu-item"><%= link_to content_tag("i", "", :class => "icon-heart")+" Friendships", friendships_path %></li>
                  <li class="usermenu-item"><%= link_to content_tag("i", "", :class => "icon-cog")+" Settings", edit_user_registration_path %></li>
                  <li class="usermenu-item"><%= link_to content_tag("i", "", :class => "icon-off")+" Log out", destroy_user_session_path, method: :delete %></li>
                </ul>
              </div>
            </li>
          </ul>

        <% end %>

      </div>
    </div>
  </div>
<% end %>