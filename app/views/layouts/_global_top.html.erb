<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= Appetizer.appname %> / <%= yield :page_title %></title>
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->
    <%= include_gon(:init => true, :watch => true) %>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <!-- UserVoice JavaScript SDK (only needed once on a page) -->
    <script>(function(){var uv=document.createElement('script');uv.type='text/javascript';uv.async=true;uv.src='//widget.uservoice.com/AI11dOQBbeNjp1gByUVWw.js';var s=document.getElementsByTagName('script')[0];s.parentNode.insertBefore(uv,s)})()</script>

    <!-- A tab to launch the Classic Widget -->
    <script>
    UserVoice = window.UserVoice || [];
    UserVoice.push(['showTab', 'classic_widget', {
      mode: 'full',
      primary_color: '#4b4658',
      link_color: '#7fa4b1',
      default_mode: 'support',
      forum_id: 203963,
      tab_label: 'Feedback & Support',
      tab_color: '#4b4658',
      tab_position: 'middle-right',
      tab_inverted: false
    }]);
    </script>
    
    <%= render "layouts/navbar" %>
    <%= render "layouts/loading_modal" %>