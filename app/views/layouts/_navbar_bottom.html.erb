<div class="navbar navbar-fixed-bottom">
  <div class="navbar-inner">

	    <ul class="nav">
	      <p class="navbar-text">
	      	<%= image_tag avatar_link(@user, 30), :class => "img-circle" %> <strong><%= @user.full_name %></strong>'s pins
	      </p>
	    </ul>
	    <%= sharing_btn(@user, "") %>

	    <% if can? :show, @master %>
		    <ul class="nav pull-right">
		    	<p id="pins-stats" class="navbar-text">
		    		<b class="badge badge-stats"><span class="pins-count"><%= @pins.count %></span> <a rel="tooltip" title="Pins" data-placement="top"><i class="icon-map-marker pins"></i></a></b>
			      <b class="badge badge-stats"><span class="cities-count"><%= @pins.city.count %></span> <a rel="tooltip" title="Cities" data-placement="top"><i class="icon-map-marker city"></i></a></b>
			      <b class="badge badge-stats"><span class="towns-count"><%= @pins.town.count %></span> <a rel="tooltip" title="Towns" data-placement="top"><i class="icon-map-marker town"></i></a></b>
			      <b class="badge badge-stats"><span class="pois-count"><%= @pins.poi.count %></span> <a rel="tooltip" title="Points of interest" data-placement="top"><i class="icon-map-marker poi"></i></a></b>
		    	</p>
		    </ul>
		  <% else %>
		  	<%= share_request("pull-right") %>
		  	<ul class="nav pull-right">
			  	<p class="navbar-text">
			  		<strong><%= @user.first_name %></strong> does not share with you.&nbsp;
			  	</p>
		  	</ul>
		  <% end %>

  </div>
</div>