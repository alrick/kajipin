<!DOCTYPE html>
<html>
<%= render "shared/head" %>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <%= render "shared/collapse" %>
        <a class="brand" href="/"><b><i class="icon-map-marker"></i> SocialRails</b></a>
        <div class="nav-collapse">
          <%= render "shared/not_logged_menu" %>
          <%= render "shared/tools_menu" %>
          <%= render "shared/user_menu" %>
          <%= render "shared/search_bar" %>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>
     
    <%= yield %>
  </div>
</body>
</html>