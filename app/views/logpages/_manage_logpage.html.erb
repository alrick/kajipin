<div id="<%= dom_id(logpage) %>" class="logpage">
  <div class="logpage-view">
    <h2 class="title"><%= logpage.title %></h2>
    <div class="row">
      <div class="span10">
        <blockquote>
          <p class="content"><%= logpage.content %><p>
          <small><%= logpage.created_at.to_formatted_s(:long_ordinal) %></small>
        </blockquote>
      </div>
      <div class="span2">
        <p><a class="btn btn-tool btn-small btn-edit" data-logpage="<%= dom_id(logpage) %>"><i class="icon-edit"></i> Edit</a></p>
        <p><%= link_to content_tag("i", "", class: "icon-trash")+" Delete", pin_logpage_path(@pin, logpage), :method => :delete, :class => "btn btn-tool btn-small btn-delete btn-remove", :confirm => "Are you sure you want to delete this page?", :remote => true %></p>
      </div>
    </div>
  </div>

  <div class="logpage-form">
    <%= simple_form_for [@pin, logpage], :remote => true do |f|  %>
      <%= f.input :title, :label => false, :input_html => { :class => "lead" } %>
      <div class="row">
        <div class="span10">
          <%= f.input :content, :label => false, :input_html => { :class => "lead" } %>
        </div>
        <div class="span2">
          <p><%= f.button :submit, "Save", :class => "btn btn-tool btn" %></p>
          <p><a class="btn btn-small btn-crud btn-cancel" data-logpage="<%= dom_id(logpage) %>">Cancel</a></p>
        </div>
      </div>
    <% end %>
  </div>

</div>