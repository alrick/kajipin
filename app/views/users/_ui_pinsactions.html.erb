<% if can? :read, @user %>
  <a id="map-bigcity" class="map-nav map-filter" rel="tooltip" title="Filter Big Cities" data-placement="bottom">
    <i class="icon-eye-open"></i>
  </a>
  <a id="map-smallcity" class="map-nav map-filter" rel="tooltip" title="Filter Small Cities" data-placement="bottom">
    <i class="icon-eye-open"></i>
  </a>
  <a id="map-pointofinterest" class="map-nav map-filter" rel="tooltip" title="Filter Point of interest" data-placement="bottom">
    <i class="icon-eye-open"></i>
  </a>
  <%= link_to content_tag("i", "", class: "icon-list-alt"), list_pins_path(:user => @user.id), :id => "map-pinslist", :class => "modal-open map-nav map-filter", :rel => "tooltip", :title => "Show a list of Pins", "data-placement" => "bottom", :remote => true %>
<% end %>