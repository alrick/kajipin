<% content_for :page_title do %><%= @user.first_name %>'s Pins<% end %>

<!-- Map main element -->
<div id="map"></div>

<!-- Left UI -->
<a id="map-world" class="map-nav map-navleft" rel="tooltip" title="Fit World" data-placement="right">
  <i class="icon-globe"></i>
</a>
<a id="map-markers" class="map-nav map-navleft" rel="tooltip" title="Fit Pins" data-placement="right">
  <i class="icon-map-marker"></i>
</a>
<a id="map-countries" class="map-nav map-navleft" rel="tooltip" title="Fit Country" data-placement="right">
  <i class="icon-list-alt"></i>
</a>

<!-- Left UI countries -->
<ul id="map-countrieslist">
  <% @countries.each do |country| %>
    <li class="map-countryitem" data-north="<%= country["north"]%>" data-east="<%= country["east"]%>" data-south="<%= country["south"]%>" data-west="<%= country["west"]%>">
      <%= country["name"] %>
    </li>
  <% end %>
</ul>

<!-- Right UI -->
<a id="map-refresh" class="map-nav map-navright" rel="tooltip" title="Update Pins and Counters" data-placement="left">
  <i class="icon-refresh"></i>
</a>
<a id="map-bigcity" class="map-nav map-navright" rel="tooltip" title="Show/hide 'Big city' Pins" data-placement="left">
  <i class="icon-eye-open"></i>
</a>
<a id="map-smallcity" class="map-nav map-navright" rel="tooltip" title="Show/hide 'Small city' Pins" data-placement="left">
  <i class="icon-eye-open"></i>
</a>
<a id="map-pointofinterest" class="map-nav map-navright" rel="tooltip" title="Show/hide 'Point of interest' Pins" data-placement="left">
  <i class="icon-eye-open"></i>
</a>
<%= link_to "<i class=\"icon-list-alt\"></i>".html_safe, "#pinslistModal", :id => "map-pinslist", :class => "map-modalopen map-nav map-navright", :rel => "tooltip", :title => "Show a list of Pins", "data-placement" => "left", :role => "link", "data-toggle" => "modal" %>

<h1 id="map-infouser" class="map-info">
  <%= link_to @user.full_name, "#userModal", :class => "map-modalopen", :role => "link", "data-toggle" => "modal" %>
</h1>

<!-- Center information -->
<div id="map-infocenter" class="map-info">
  <p class="lead no-margin"><%= @user.first_name %> has no pin.</p>
</div>

<!-- Include modals -->
<%= render "users/show/user_modal" %>
<%= render "users/show/pinslist_modal" %>
<%= render "users/show/pin_modal" %>

<!-- Hidden div to calculate resizing of pinModal body -->
<div id="calculator" style="display:none; position:absolute;"></div>