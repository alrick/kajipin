<% content_for :page_title do %>Users<% end %>

<div class="page-header">
  <h1>All users <small>A list of all registered users.</small></h1>
</div>
<table class="table table-striped">
  <tbody>
    <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user.first_name+' '+user.last_name, user_path(user) %>
          </td>
          <td>
            <% if !current_user.isWatcher(user.id) %>
              <%= link_to '<i class="icon-heart icon-white"></i>&nbsp;&nbsp;Share with'.html_safe, friendships_path(:friend_id => user), :method => :post, :class => 'btn btn-warning btn-mini user-buttons-unify' %>
            <% end %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>