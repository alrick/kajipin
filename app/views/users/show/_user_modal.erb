<div id="userModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="userModalLabel"><%= @user.full_name %> <small><%= "("+@user.age.to_s+" years old)" unless @user.age.nil? %></small></h3>
  </div>
  <div class="modal-body">
    <table>
      <tr>
        <td><%= image_tag gravatar_url(@user, 165), :class => "img-polaroid" %></td>
        <td style="padding-left: 60px">
          <h4><i class="icon-signal"></i> Friends</h4>
          <table>
            <tr>
              <td><span class="badge badge-social"><%= @user.number_sharing %></span>&nbsp;</td><td><strong>Sharing</strong></td>
            </tr>
            <tr>
              <td><span class="badge badge-social"><%= @user.number_sharers %></span></td><td><strong>Sharers</strong></td>
            </tr>
          </table>
          </ul>
        </td>
        <td style="padding-left: 40px">
          <h4><i class="icon-signal"></i> Travel</h4>
          <table>
            <tr>
              <td><span class="badge badge-map"><%= @user.number_pins %></span>&nbsp;</td>
              <td><strong>Pins</strong></td>
            </tr>
            <tr>
              <td><span class="badge badge-map"><%= @user.number_countries %></span></td>
              <td><strong>Countries</strong></td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </div>
  <div class="modal-footer">
    <% if @user == current_user %>
      <p>That's you! Yeah really.</p>
    <% else %>
      <% if current_user.isSharing(@user) %>
        <p>You're currently sharing with <%= @user.first_name %>.</p>
        <button class="btn btn-primary btn-social">Sharing</button>
      <% else %>
        <p>You do not currently share with <%= @user.first_name %>.</p>
        <button class="btn btn-social"><i class="icon-heart"></i> Share</button>
      <% end %>
    <% end %>
  </div>
</div>