<div class="page-header profile-page">
  <div class="row">
    <div class="span3"><%= image_tag gravatar_url(@user, 190) %></div>
    <div class="span3">
      <h1><%= @user.first_name %> <%= @user.last_name %></h1>
      <div class="user-show-header-ginfos">
