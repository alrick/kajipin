<% if pins.empty? %>
  <p class="lead">No pin</p>
<% else %>
  <table class="table table-striped table-condensed">
    <tbody>
      <% pins.each do |pin| %>
        <tr>
          <td style="width: 50%">
            <a rel="tooltip" title="<%= pin.country_name %>" data-placement="left"><%= image_tag("flags/"+pin.country_code.downcase+".png", :width => 12) %></a><strong> <%= pin.title %></strong>
          </td>
          <td>
            <%= link_to (pin.galleries_count+"&nbsp;<i class=\"icon-camera\"></i>").html_safe, "#", :class => "btn btn-mini btn-tool map-btnunify", :rel => "tooltip", :title => "Galleries" %>
            <%= link_to (pin.logpages_count+"&nbsp;<i class=\"icon-book\"></i>").html_safe, "#", :class => "btn btn-mini btn-tool map-btnunify", :rel => "tooltip", :title => "Logbook" %>
            <%= link_to (pin.comments_count+"&nbsp;<i class=\"icon-comment\"></i>").html_safe, "#", :class => "btn btn-mini btn-tool map-btnunify", :rel => "tooltip", :title => "Comments" %>
            <%= link_to "<i class=\"icon-map-marker icon-white\"></i>".html_safe, "#", :class => "btn btn-mini btn-map map-btnunify", :rel => "tooltip", :title => "Locate" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>