<% if pins.empty? %>
  <p class="lead">No pin</p>
<% else %>
  <table class="table table-striped table-condensed">
    <tbody>
      <% pins.each do |pin| %>
        <tr>
          <td style="width: 50%">
            <a rel="tooltip" title="<%= pin.country_name %>" data-placement="right"><%= image_tag("flags/"+pin.country_code.downcase+".png", :width => 12) %></a> <strong><%= pin.title %></strong>
          </td>
          <td>
            <%= 
              #link_to pin.galleries_count+" "+content_tag("i", "", class: "icon-camera"), "", :class => "btn btn-mini btn-tool map-btnunify", :rel => "tooltip", :title => "Galleries" 
            %>
            <%= link_to pin.logpages_count+" "+content_tag("i", "", class: "icon-book"), "", :class => "btn btn-mini btn-tool map-btnunify", :rel => "tooltip", :title => "Logbook" %>
            <%= link_to pin.comments_count+" "+content_tag("i", "", class: "icon-comment"), "", :class => "btn btn-mini btn-tool map-btnunify", :rel => "tooltip", :title => "Comments" %>
            <%= link_to content_tag("i", "", class: "icon-map-marker"), "", :class => "btn btn-mini btn-map map-btnunify", :rel => "tooltip", :title => "Locate" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>