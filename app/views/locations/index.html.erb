<% content_for :page_title do %><%= @user.first_name %>'s Pins<% end %>

<div class="page-header">
  <h1>Your Pins <small>Manage them all!</small></h1>
</div>

<%= form_tag("locations/new", :method => "get", :class => "well form-inline") do %>
  <p><strong>Simply specify location's name to add a pin.</strong></p>
  <%= text_field_tag(:q, nil, :class => "input-large", :placeholder => "Name") %>
  <%= button_tag "<i class=\"icon-plus-sign\"></i>&nbsp;&nbsp;Add".html_safe, :class => "btn btn-map", :value => "add" %>
<% end %>

<h2>Current pins</h2>

<div class="form-actions">
  <% if @locations.empty? %>
    <p>No location added.</p>
  <% else %>
    <table class="table table-striped">
      <tbody>
        <% @locations.each do |location| %>
          <tr>
            <td><strong><%= location.title %></strong></td>
            <td><%= image_tag(location.locategory.marker_path, :width => "15") %> <%= location.locategory.name %></td>
            <td><%= image_tag("flags/"+location.country_code.downcase+".png") %>&nbsp;<%= location.country_name %></td>
            <td><%= location.short_lat %>&deg;</td>
            <td><%= location.short_lon %>&deg;</td>
            <td>
              <%= link_to "<i class=\"icon-camera\"></i>".html_safe, locations_path, :class => "btn btn-mini btn-tool", :rel => "tooltip", :title => "Manage Galleries" %>
              <%= link_to "<i class=\"icon-book\"></i>".html_safe, locations_path, :class => "btn btn-mini btn-tool", :rel => "tooltip", :title => "Manage Logbook" %>
              <%= link_to "<i class=\"icon-comment\"></i>".html_safe, locations_path, :class => "btn btn-mini btn-tool", :rel => "tooltip", :title => "Manage Comments" %>
            </td>
            <td>
              <%= link_to "<i class=\"icon-edit\"></i>&nbsp;&nbsp;Edit".html_safe, edit_location_path(location), :class => "btn btn-mini btn-map" %>
              <%= link_to "<i class=\"icon-trash\"></i>&nbsp;&nbsp;Remove".html_safe, location_path(location), :method => :delete, :class => "btn btn-mini btn-map btn-remove", :confirm => "All galleries/logbook/comments will also be deleted! Sure?" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>