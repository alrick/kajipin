<div class="pin">
	
	<div class="page-header">
		<h2><%= @pin.title %> <small><%= @pin.country_name %></small></h2>
		<p class="lead">
			<%= @photos.count %> <i class="icon-camera-retro"></i>
			<span class="comments-count"><%= @comments.count %></span> <i class="icon-comments"></i>
		</p>
	</div>

	<div class="comments">
		<div class="inside">
			<%= render @comments %>
		</div>
		<div class="new">
			<%= render "comments/new" %>
		</div>
	</div>

	<div class="photos">
		<%= render @photos %>
	</div>

</div>