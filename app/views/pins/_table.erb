<!-- Called by the listModal of user profile -->
<% if pins.empty? %>
  <p class="lead">No pin</p>
<% else %>
  <table class="table table-striped table-condensed table-hover">
    <tbody>
      <% pins.each do |pin| %>
        <tr>
          <td style="width: 50%">
            <a rel="tooltip" title="<%= pin.country_name %>" data-placement="right"><%= image_tag("flags/"+pin.country_code.downcase+".png", :width => 12) %></a> <strong><%= pin.title %></strong>
          </td>
          <td>
            <div class="btn-group">
              <%= link_to pin.photos_count+" "+content_tag("i", "", class: "icon-camera-retro"), pin_photos_path(pin), :class => "btn btn-mini btn-tool map-btnunify btn-list", :remote => true %>
              <%= link_to pin.comments_count+" "+content_tag("i", "", class: "icon-comments"), pin_comments_path(pin), :class => "btn btn-mini btn-tool map-btnunify btn-list", :remote => true %>
              <%= link_to pin.logpages_count+" "+content_tag("i", "", class: "icon-book"), pin_logpages_path(pin), :class => "btn btn-mini btn-tool map-btnunify btn-list", :remote => true %>
            </div>
            <%= link_to content_tag("i", "", class: "icon-map-marker"), "#", :class => "btn btn-mini btn-map map-btnunify btn-list map-tooltipzoom", :rel => "tooltip", :title => "Locate", "data-lat" => pin.latitude, "data-lon" => pin.longitude, "data-title" => pin.title %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>