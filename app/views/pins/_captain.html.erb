<div class="btn-group captain">
  <a class="btn btn-mini btn-other dropdown-toggle" data-toggle="dropdown" href="#">
    <i class="icon-pencil"></i>
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu pull-right">
    <li>
      <%= link_to content_tag(:i, "", :class => "icon-pencil")+" Photos", captain_pin_photos_path(pin), "tabindex" => "-1" %>
    </li>
    <li class="divider"></li>
    <%= content_tag(:li, link_to(content_tag(:i, "", :class => "icon-map-marker") + " Change type to City", pin_path(pin, :type => City.sti_name), :method => :put, :remote => true, :confirm => "You are about to change the type of the pin.", "tabindex" => "-1")) unless (pin.type == City.sti_name) %>
    <%= content_tag(:li, link_to(content_tag(:i, "", :class => "icon-map-marker") + " Change type to Town", pin_path(pin, :type => Town.sti_name), :method => :put, :remote => true, :confirm => "You are about to change the type of the pin.", "tabindex" => "-1")) unless (pin.type == Town.sti_name) %>
    <%= content_tag(:li, link_to(content_tag(:i, "", :class => "icon-map-marker") + " Change type to Poi", pin_path(pin, :type => Poi.sti_name), :method => :put, :remote => true, :confirm => "You are about to change the type of the pin.", "tabindex" => "-1")) unless (pin.type == Poi.sti_name) %>
    <li class="divider"></li>
    <li>
      <%= link_to content_tag("i", "", :class => "icon-trash")+" Remove", pin_path(pin), :method => :delete, :remote => true, :confirm => "All related data will be lost (Photos and Comments).", "tabindex" => "-1" %>
    </li>
  </ul>
</div>