<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h2 id="creatorModalLabel">Add a pin <small>Step 1 of 2</small></h2>
</div>
<%= simple_form_for :location, :url => '/locations' do |f| %>
  <div class="modal-body lead">
    <p>Please choose the type of your pin :</p>
    <div class="btn-group" data-toggle="buttons-radio">
      <button type="button" class="btn active btn-city" value="<%= City.sti_name %>">
        <i class="icon-map-marker"></i> <strong>City</strong>
      </button>
      <button type="button" class="btn btn-town" value="<%= Town.sti_name %>">
        <i class="icon-map-marker"></i> <strong>Town</strong>
      </button>
      <button type="button" class="btn btn-poi" value="<%= Poi.sti_name %>">
        <i class="icon-map-marker"></i> <strong>Point of interest</strong>
      </button>
    </div>

    <p>The place you're looking for :</p>
    <%= f.text_field :name, :placeholder => 'London, Eiffel Tower, etc..' %>
  </div>
  <div class="modal-footer">
    <%= f.submit "Next", :class => "btn btn-tool" %>
  </div>
<% end %>