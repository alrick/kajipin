<tr id="<%= dom_id(pin) %>" data-locategory="<%= pin.locategory_id %>">
  <td><%= link_to image_tag("flags/"+pin.country_code.downcase+".png"), "", :rel => "tooltip", :title => pin.country_name %> <strong><%= pin.title %></strong></td>
  <td>
    <%= pin.short_lat %> &deg; <%= link_to "", :rel => "tooltip", :title => "Latitude" do %>&phi;<% end %>, 
    <%= pin.short_lon %>&deg; <%= link_to "", :rel => "tooltip", :title => "Longitude" do %>&lambda;<% end %>
  </td>
  <td>
    <%= link_to content_tag("i", "", class: "icon-camera"), pins_path, :class => "btn btn-mini btn-tool", :rel => "tooltip", :title => "Manage Galleries" %>
    <%= link_to content_tag("i", "", class: "icon-book"), manage_pin_logpages_path(pin), :class => "btn btn-mini btn-tool", :rel => "tooltip", :title => "Manage Logbook" %>
  </td>
  <td>
    <%= link_to content_tag("i", "", class: "icon-edit")+" Edit", edit_pin_path(pin), :class => "btn btn-mini btn-map" %>
    <%= link_to content_tag("i", "", class: "icon-trash")+" Remove", pin_path(pin), :method => :delete, :remote => true, :class => "btn btn-mini btn-map btn-remove", :confirm => "All related galleries, logbook and comments will also be deleted! Sure?" %>
  </td>
</tr>