<tr id="<%= dom_id(pin) %>" data-locategory="<%= pin.locategory_id %>">
  <td>
    <%= link_to image_tag("flags/"+pin.country_code.downcase+".png"), "", :rel => "tooltip", :title => pin.country_name %>&nbsp;
    <strong><%= pin.title %></strong>&nbsp;
    <small><%= content_tag("i", "", :class => "icon-upload") if pin.population >= 1000000 %></small>
  </td>
  <td>
    <%= pin.short_lat %>&deg; <strong>&phi;</strong>, 
    <%= pin.short_lon %>&deg; <strong>&lambda;</strong>
  </td>
  <td>
    <span class="label label-tool pins-unify-stats"><%= pin.comments_count %> <i class="icon-comments"></i></span>
    <span class="label label-tool pins-unify-stats"><%= pin.logpages_count %> <i class="icon-book"></i></span>
  </td>
  <td>
    <%= link_to content_tag("i", "", class: "icon-book")+" Manage", captain_pin_logpages_path(pin), :class => "btn btn-mini btn-tool" %>
  </td>
  <td>
    <%= link_to content_tag("i", "", class: "icon-edit")+" Edit", edit_pin_path(pin), :class => "btn btn-mini btn-map" %>
    <%= link_to content_tag("i", "", class: "icon-trash")+" Remove", pin_path(pin), :method => :delete, :class => "btn btn-mini btn-map btn-remove", :data => { :confirm => "Are you sure you want to remove #{pin.title}?", :beware => "<li>#{pin.title}'s logbook will be removed</li><li>#{pin.title}'s comments will be removed</li>" } %>
  </td>
</tr>