<div id="pinslistModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="pinslistModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="pinslistModalLabel"><%= @user.first_name %>'s Pins</h3>
  </div>
  <div class="modal-body">
    <div class="tabbable"> <!-- Only required for left/right tabs -->
      <ul id ="pins-toolstabs" class="nav nav-tabs">
        <li class="active"><a href="#bigcity" data-toggle="tab"><b><%= image_tag(Locategory.bigcity_marker_path, :width => "15") %> Big City (<%= @big_cities.count %>)</b></a></li>
        <li><a href="#smallcity" data-toggle="tab"><b><%= image_tag(Locategory.smallcity_marker_path, :width => "15") %> Small City (<%= @small_cities.count %>)</b></a></li>
        <li><a href="#pointofinterest" data-toggle="tab"><b><%= image_tag(Locategory.pointofinterest_marker_path, :width => "15") %> Point of Interest (<%= @points_of_interest.count %>)</b></a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="bigcity">
          <%= render "pins/index/pins_table", :pins => @big_cities %>
        </div>
        <div class="tab-pane" id="smallcity">
          <%= render "pins/index/pins_table", :pins => @small_cities %>
        </div>
        <div class="tab-pane" id="pointofinterest">
          <%= render "pins/index/pins_table", :pins => @points_of_interest %>
        </div>
      </div>
    </div>
  </div>
</div>