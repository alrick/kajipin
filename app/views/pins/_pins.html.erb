<ul class="dropdown-menu pins" role="menu" aria-labelledby="dropdownMenu">
	<% @pins.each do |pin| %>
		<li id="<%= dom_id(pin) %>">
			<a tabindex="-1" href="#">
				<i class="icon-map-marker <%= pin_class(pin.type) %>"></i> <strong><%= pin.title %></strong> <span class="smaller"><%= pin.country_name %> - <%= pin.photos.count %> <i class="icon-camera-retro"></i>  <%= pin.comments.count %> <i class="icon-comments"></i></span>
			</a>
		</li>
	<% end %>
</ul>