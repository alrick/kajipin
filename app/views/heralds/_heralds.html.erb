<div id="heralds">
  <% if @herald.nil? || @herald.destroyed? %>
    <%= link_to "Generate my Herald", heralds_path, :method => :post, :remote => true, :class => "btn btn-social btn-block btn-large" %>
  <% else %>
    <p>Your profile is publicly accessible with the following address :</p>
    <code><%= request.host+"/"+@herald.key %></code>&nbsp;
    <%= link_to content_tag("i", "", :class => "icon-external-link"), "/"+@herald.key, :class => "btn btn-social btn-mini" %>&nbsp;
    <%= link_to content_tag("i", "", :class => "icon-trash"), "#", :rel => "delete-tooltip", "data-title" => "#{ link_to "Delete", heralds_path, :class => "btn btn-confirm", :method => :delete, :remote => true }", :class => "btn btn-social btn-mini" %>
  <% end %>
</div>