<div id="comments-container">
  <div id="comments">
    <%= render(@comments) || content_tag("strong", "No comments", :class => "empty-set") %>
  </div>

  <%= paginate @comments, :remote => true, :theme => "small" %>

  <% if @herald.nil? %>
    <div id="comments-new">
      <%= render "new" %>
    </div>
  <% end %>
</div>