<%= div_for comment, :class => "row" do %>
  <div class="span1"><%= image_tag avatar_url(comment.user, 40), :class => 'img-polaroid' %></div>
  <div class="span5" style="margin-left: 0">
    <blockquote>
      <p>
        <% if (can? :destroy, comment) && (@herald.nil?) %>
          <%= link_to content_tag("i", "", class: "icon-remove-sign"), "#", :rel => "delete-tooltip", "data-title" => "#{ link_to "Delete", pin_comment_path(@pin, comment, :page => @page), :class => "btn btn-confirm", :method => :delete, :remote => true }" %>
        <% end %>
        <%= comment.value %>
      </p>
      <small>
        <% if comment.user.nil? %>
          Castaway (<%= comment.created_at.to_formatted_s(:long_ordinal) %>)
        <% else %>
          <%= link_to comment.user.full_name, user_path(comment.user) %> (<%= comment.created_at.to_formatted_s(:long_ordinal) %>)
        <% end %>
      </small>
    </blockquote>
  </div>
<% end %>