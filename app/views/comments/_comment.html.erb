<%= div_for comment, :class => "row" do %>
  <div class="span1"><%= image_tag gravatar_url(comment.user, 40), :class => 'img-polaroid' %></div>
  <div class="span5" style="margin-left: 0">
    <blockquote>
      <p>
        <% if @pin.user == current_user %>
          <%= link_to content_tag("i", "", class: "icon-remove-sign"), pin_comment_path(@pin, comment, :page => @page), :method => :delete, :remote => true, :confirm => "Are you sure you want to delete this comment?" %>
        <% end %>
        <%= comment.value %>
      </p>
      <small>
        <% if comment.user.nil? %>
          Deleted author (<%= comment.created_at.to_formatted_s(:long_ordinal) %>)
        <% else %>
          <%= link_to comment.user.full_name, user_path(comment.user) %> (<%= comment.created_at.to_formatted_s(:long_ordinal) %>)
        <% end %>
      </small>
    </blockquote>
  </div>
<% end %>